  <header class="header-area header-area-2" style="margin-top: -24px; !important">
        <div class="header-top pl-30 pr-30">
            <div class="row align-items-center">
                <div class="col-md-6 col-sm-7">
                    <div class="header-left-side text-center text-sm-left">
                       {{page.top_left}}
                    </div>
                </div>
                <div class="col-md-6 col-sm-5">
                    <div class="header-right-social text-center text-sm-right">
                       {{page.top_right}}
                    </div>
                </div>
            </div> 
        </div>
        <div class="header-nav">
            <div class="navigation">
                <nav class="navbar navbar-expand-lg navbar-light ">
                   {{page.logo}}<!-- logo -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                    </button> <!-- navbar toggler -->

                    <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                           {{page.navigation}}
                    </div> <!-- navbar collapse -->
                    <div class="navbar-btn mr-100">
                         {{page.free_consulting}}
                    </div>
                </nav>
            </div> <!-- navigation -->
        </div>
    </header>





 {# Action Links #}
    {% if action_links %}
        {% block action_links %}
            <ul class="action-links">{{ action_links }}</ul>
        {% endblock %}
    {% endif %}

    {# Help #}
    {% if page.help %}
        {% block help %}
            {{ page.help }}
        {% endblock %}
    {% endif %}

    {# Content #}
    {% block content %}
        <a id="main-content"></a>
        {{ page.content }}
    {% endblock %}
    
    

    
  
   

  

