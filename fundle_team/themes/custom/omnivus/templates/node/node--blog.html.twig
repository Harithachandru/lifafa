<div class="page-title-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title-item text-center">
                        <h2 class="title">{{node.getTitle}}</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="../">Home </a></li>
                                <li class="breadcrumb-item active" aria-current="page">News Details</li>
                            </ol>
                        </nav>
                    </div> <!-- page title -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </div> 






     <div class="blog-standard-area pt-90 pb-120">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="blog-standard">
                        <div class="single-blog-standard  mt-30">
                            <div class="blog-dteails-content blog-border">
                                <div class="blog-details-top">
                                    
                                    <h2 class="title">{{node.getTitle}}</h2>
                                    <ul>
                                        
                                        <li><i class="fal fa-comments"></i> {{ node.field_blog_comments.comment_count }} Comments</li>
                                        <li><i class="fal fa-calendar-alt"></i> {{ node.created.value|date('F d') }} </li>
                                    </ul>
                                    <p>{{node.body.summary}}</p>
                                    
                                </div>
                                <div class="blog-details-bath">
                                    <img src="{{file_url(node.field_blog_image.0.entity.uri.value)}}" alt="blog-details">
                                       {{content.body}}
                                </div>
                                <div class="blog-details-quote text-center mt-30 mb-30">
                                    <p><span>by</span> {% if full_name %}{{ full_name }}{% else %}{{ author_name }}{% endif %}</p>
                                </div>
                                
                                <div class="blog-details-bar d-flex justify-content-between mt-40 mb-50">
                                   
                                    <div class="blog-social text-right">
                                        <h4 class="title">Social Share</h4>
                                        <ul>
                                            <li><a target="_blank" href="http://www.facebook.com/sharer.php?u={{base_root ~ url}}"><i class="fab fa-facebook-f"></i></a></li>
                                            <li><a href="https://twitter.com/intent/tweet?text={{ title }}&amp;url={{base_root ~ url}}" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                            <li><a href="http://plus.google.com/share?url={{base_root ~ url}}" target="_blank"><i class="fab fa-google-plus"></i></a></li>

                                        </ul>
                                    </div>
                                </div>
                              
                             
                                
                               {{ content.field_comments }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-8">
                    <div class="blog-sidebar-area ml-20">
                           {{blog_section}}
                    </div>
                </div>
            </div>
        </div>
    </div> 
 