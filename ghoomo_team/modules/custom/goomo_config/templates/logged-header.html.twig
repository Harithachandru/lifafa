.shake-button {
    padding: 6px 20px;
    cursor: pointer;
}

.shake-button:hover {
    background-color: #fff;
}

/* Keyframes for the shake animation */
@keyframes shake {
    0%, 100% {
        transform: translateX(0);
    }
    10%, 30%, 50%, 70%, 90% {
        transform: translateX(-5px);
    }
    20%, 40%, 60%, 80% {
        transform: translateX(5px);
    }
}

/* Add the animation to the button when active (clicked) */
.shake-button:active {
    animation: shake 0.5s ease-in-out;
}
