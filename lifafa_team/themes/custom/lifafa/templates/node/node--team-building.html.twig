    <div class="top-border"></div>
    <div class="text-center pb-30">
        <a href="/request-booking/{{node.id}}" class="btn btn-primary">Request to book</a>
    </div>		
</div>  
<div class="steps clear   pb-30">
    <div class="container container-1500 back-link back-right">
        <a href="javascript:history.go(-1)"> Back </a>        
    </div>    
</div>
